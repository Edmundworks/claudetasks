{
  "mcpServers": {
    "notion-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer $NOTION_TOKEN\", \"Notion-Version\": \"2022-06-28\" }"
      }
    },
    "mcp-gsuite": {
      "command": "uv",
      "args": [
        "--directory",
        "$CLAUDE_PROJECT_DIR/mcp-gsuite",
        "run",
        "mcp-gsuite-enhanced"
      ],
      "env": {
        "PYTHONPATH": "$CLAUDE_PROJECT_DIR/mcp-gsuite",
        "UV_PROJECT_ENVIRONMENT": "$CLAUDE_PROJECT_DIR/mcp-gsuite/.venv"
      }
    }
  }
}
