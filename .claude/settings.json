{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__notion__API-post-search",
      "mcp__notion__API-post-database-query",
      "mcp__notion__API-retrieve-a-page",
      "mcp__notion__*",
      "mcp__notion-mcp__*",
      "mcp__notion-mcp__API-retrieve-a-page",
      "mcp__notion-mcp__API-get-block-children",
      "mcp__notion-mcp__API-post-database-query",
      "mcp__notion-mcp__API-patch-page",
      "mcp__notion-mcp__API-post-page",
      "mcp__notion-mcp__API-patch-block-children",
      "mcp__notion-mcp__API-retrieve-a-block",
      "Bash(mv:*)",
      "mcp__notion-mcp__API-get-users",
      "mcp__notion-mcp__API-retrieve-a-database",
      "mcp__notion-mcp__API-update-a-block",
      "mcp__notion-mcp__API-delete-a-block",
      "Bash(rm:*)",
      "mcp__notion-mcp__API-post-search",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "WebFetch(domain:www.notion.so)",
      "mcp__notion-mcp__API-update-a-database",
      "Bash(source:*)",
      "Bash(python:*)",
      "Bash(./venv/bin/python:*)",
      "mcp__mcp-gsuite__list_calendars",
      "mcp__mcp-gsuite__get_calendar_events",
      "mcp__mcp-gsuite__create_calendar_event",
      "mcp__mcp-gsuite__update_calendar_event",
      "mcp__notion-mcp__API-create-a-database",
      "mcp__mcp-gsuite__query_emails",
      "mcp__mcp-gsuite__get_unread_emails",
      "mcp__mcp-gsuite__list_labels",
      "mcp__mcp-gsuite__delete_label",
      "mcp__mcp-gsuite__create_label",
      "mcp__mcp-gsuite__get_email_by_id",
      "mcp__mcp-gsuite__send_email",
      "mcp__mcp-gsuite__apply_label",
      "mcp__mcp-gsuite__remove_label",
      "mcp__mcp-gsuite__batch_archive_emails",
      "mcp__mcp-gsuite__bulk_get_emails",
      "mcp__mcp-gsuite__archive_email",
      "mcp__mcp-gsuite__delete_calendar_event",
      "mcp__mcp-gsuite__restore_email_to_inbox"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["notion-mcp", "mcp-gsuite"],
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "200000"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|mcp__notion-mcp__API-update*|mcp__notion-mcp__API-create*",
        "hooks": [
          {
            "type": "command",
            "command": "source $CLAUDE_PROJECT_DIR/gsuite-mcp/.venv/bin/activate && python3 $CLAUDE_PROJECT_DIR/.claude/hooks/sync-reminder.py"
          }
        ]
      }
    ]
  }
}
